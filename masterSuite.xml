<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MasterSuite" parallel="tests" thread-count="5"> 

<!--  
* Cross-browser testing (Chrome, Firefox, Edge)

* Parallel execution at test level (browsers run in parallel)

* Batch execution (multiple test classes per browser batch)

* Group execution (run only a specific group, e.g. Master)

* Listener defined once (For generating extent report)

* Thread count setup for parallel execution -->
											
  <!-- âœ… Define listener once at suite level -->
  <listeners>
    <listener class-name="Utilities.ExtentReportManager"/>
  </listeners> 

  <!-- Chrome browser parallel execution -->
  <test thread-count="5" name="ChromeBrowser">
  	<parameter name="os" value="Windows"/>	
    <parameter name="browser" value="chrome"/>
    <groups>
  		<run>
  			<include name="Master"></include>
  		</run>
  	</groups>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test> 

  <!-- Edge browser parallel execution -->
  <test thread-count="5" name="EdgeBrowser">
  	<parameter name="os" value="Windows"/>
    <parameter name="browser" value="edge"/>
     <groups>
  		<run>
  			<include name="Master"></include>
  		</run>
  	</groups>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test>

  <!-- Firefox browser parallel execution 
  <test thread-count="5" name="FirefoxBrowser">
  	<parameter name="os" value="Windows"/>
    <parameter name="browser" value="firefox"/>
     <groups>
  		<run>
  			<include name="Master"></include>
  		</run>
  	</groups>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test> -->
  
</suite> <!-- Suite -->
