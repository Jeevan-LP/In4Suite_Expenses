<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="ParallelExecutionSuite" parallel="tests" thread-count="3">

  <!-- âœ… Define listener once at suite level -->
  <listeners>
    <listener class-name="Utilities.ExtentReportManager"/>
  </listeners> 

  <!-- Chrome browser parallel execution -->
  <test thread-count="5" name="ChromeBrowser">
  	<parameter name="os" value="Windows"/>	
    <parameter name="browser" value="chrome"/>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test> 

  <!-- Edge browser parallel execution -->
  <test thread-count="5" name="EdgeBrowser">
  	<parameter name="os" value="Windows"/>
    <parameter name="browser" value="edge"/>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test>

  <!-- Firefox browser parallel execution -->
  <test thread-count="5" name="FirefoxBrowser">
  	<parameter name="os" value="Windows"/>
    <parameter name="browser" value="firefox"/>
    <classes>
      <class name="Expenses_TestCases.Expenses_FullTest"/>
    </classes>
  </test> 
  
</suite>
